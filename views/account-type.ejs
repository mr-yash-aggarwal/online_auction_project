<%- include('partials/header') %>

<div class="jumbotron centered">
  <div class="container">
    <!-- <i class="fas fa-money fa-6x"></i> -->
    <h1 class="display-3">Account Type</h1>
    <p class="lead">Please choose account type!</p>
    <hr />

    <div class="card">
      <div class="card-body">
        <form action="/" method="POST">
          <div class="form-group">
            <button
              type="submit"
              class="btn btn-dark btn-lg"
              name="accountType"
              value="seller"
            >
              Seller Account
            </button>
            <button
              type="submit"
              class="btn btn-dark btn-lg"
              name="accountType"
              value="buyer"
            >
              Buyer Account
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
